// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/database.db"
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  role     String
}

model StorageInstance {
  id       String @id @unique
  name     String
  settings String
}
